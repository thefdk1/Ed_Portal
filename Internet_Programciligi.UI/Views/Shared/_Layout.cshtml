<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Eğitim Portalı - Online Eğitim Platformu">
    <meta name="keywords" content="eğitim,kurs,online eğitim,öğrenme platformu">
    <meta name="author" content="Eğitim Portalı">
    <title>@ViewData["Title"] - Eğitim Portalı</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/edumel-assets/vendors/bootstrap/bootstrap.css">
    <!-- Iconfont CSS -->
    <link rel="stylesheet" href="~/edumel-assets/vendors/awesome/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/edumel-assets/vendors/flaticon/flaticon.css">
    <link rel="stylesheet" href="~/edumel-assets/fonts/gilroy/font-gilroy.css">
    <!-- Animate CSS -->
    <link rel="stylesheet" href="~/edumel-assets/vendors/animate-css/animate.css">
    <link rel="stylesheet" href="~/edumel-assets/vendors/animated-headline/animated-headline.css">
    <link rel="stylesheet" href="~/edumel-assets/vendors/owl/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="~/edumel-assets/vendors/owl/assets/owl.theme.default.min.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/edumel-assets/css/style.css">
    <link rel="stylesheet" href="~/edumel-assets/css/responsive.css">

    <!-- Mevcut CSS'ler -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Internet_Programciligi.UI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body id="top-header">
    <!-- Header Start -->
    <header class="header-style-1">
        <div class="header-topbar topbar-style-2">
            <div class="container">
                <div class="row justify-content-between">
                    <div class="col-xl-8 col-lg-6 col-md-12">
                        <div class="header-contact text-center text-lg-start d-none d-sm-block">
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <span class="text-color me-2"><i class="fa fa-phone-alt"></i></span><a href="tel:+902161234567">+90 216 123 45 67</a>
                                </li>
                                <li class="list-inline-item">
                                    <span class="text-color me-2"><i class="fa fa-envelope"></i></span><a href="mailto:info@egitimportali.com">info@egitimportali.com</a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-xl-4 col-lg-6 col-md-12">
                        <div class="d-sm-flex justify-content-center justify-content-lg-end">
                            <div class="header-socials text-center text-lg-end">
                                <ul class="list-inline">
                                    <li class="list-inline-item"><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                    <li class="list-inline-item"><a href="#"><i class="fab fa-twitter"></i></a></li>
                                    <li class="list-inline-item"><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
                                    <li class="list-inline-item"><a href="#"><i class="fab fa-instagram"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="header-navbar navbar-sticky">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <!-- Logo - Sol tarafta sabit -->
                    <div class="site-logo" style="flex: 0 0 auto;">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/edumel-assets/images/logo.png" alt="Eğitim Portalı" class="img-fluid" />
                        </a>
                    </div>

                    <!-- Mobil menü ikonu -->
                    <div class="offcanvas-icon d-block d-lg-none">
                        <a href="#" class="nav-toggler"><i class="fal fa-bars"></i></a>
                    </div>

                    <!-- Ana menü - Ortada -->
                    <nav class="site-navbar d-flex justify-content-between align-items-center flex-grow-1">
                        <div class="flex-grow-1"></div> <!-- Sol boşluk -->
                        <ul class="primary-menu d-flex justify-content-center mb-0" style="flex: 2;">
                            <li>
                                <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                            </li>
                            <li>
                                <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Courses">Kurslar</a>
                            </li>
                            <li>
                                <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Teachers">Öğretmenler</a>
                            </li>
                            @if (Context.Session.GetString("JWTToken") != null)
                            {
                                <li>
                                    <a class="nav-link px-3" asp-area="" asp-controller="User" asp-action="MyCourses">Kurslarım</a>
                                </li>
                                @if (ViewBag.IsAdmin == true)
                                {
                                    <li>
                                        <a class="nav-link px-3" asp-area="" asp-controller="Admin" asp-action="Home">Admin Paneli</a>
                                    </li>
                                }
                            }
                        </ul>

                        <!-- Giriş/Kayıt butonları - Sağda -->
                        <ul class="header-btn d-flex mb-0 ms-4" style="flex: 0 0 auto;">
                            @if (Context.Session.GetString("JWTToken") == null)
                            {
                                <li class="me-2">
                                    <a class="btn btn-main-2 btn-sm-2 rounded" asp-area="" asp-controller="Home" asp-action="Login">Giriş Yap</a>
                                </li>
                                <li>
                                    <a class="btn btn-main btn-sm rounded" asp-area="" asp-controller="Home" asp-action="Register">Kayıt Ol</a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <span class="text-dark me-2">Hoşgeldin @ViewBag.UserName!</span>
                                </li>
                                <li>
                                    <a class="btn btn-main-2 btn-sm-2 rounded" asp-area="" asp-controller="Home" asp-action="Logout">Çıkış Yap</a>
                                </li>
                            }
                        </ul>

                        <a href="#" class="nav-close"><i class="fal fa-times"></i></a>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- Header End -->

    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer Start -->
    <footer class="footer footer-3 pt-250">
        <div class="footer-mid">
            <div class="container">
                <div class="row">
                    <div class="col-xl-3 col-sm-8 me-auto">
                        <div class="widget footer-widget mb-5 mb-lg-0">
                            <div class="footer-logo">
                                <img src="~/edumel-assets/images/logo.png" alt="Eğitim Portalı" class="img-fluid">
                            </div>
                            <p class="mt-4">Eğitim Portalı ile geleceğinizi şekillendirin. Kaliteli eğitim, uzman eğitmenler ve zengin içeriklerle yanınızdayız.</p>
                        </div>
                    </div>

                    <div class="col-xl-2 col-sm-4">
                        <div class="footer-widget mb-5 mb-lg-0">
                            <h5 class="widget-title">Hızlı Bağlantılar</h5>
                            <ul class="list-unstyled footer-links">
                                <li><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                                <li><a asp-controller="Home" asp-action="Courses">Kurslar</a></li>
                                <li><a asp-controller="Home" asp-action="Teachers">Öğretmenler</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-xl-2 col-sm-4">
                        <div class="footer-widget mb-5 mb-lg-0">
                            <h5 class="widget-title">Kurumsal</h5>
                            <ul class="list-unstyled footer-links">
                                <li><a href="#">Hakkımızda</a></li>
                                <li><a href="#">İletişim</a></li>
                                <li><a href="#">Gizlilik Politikası</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-xl-2 col-sm-4">
                        <div class="footer-widget mb-5 mb-lg-0">
                            <h5 class="widget-title">İletişim</h5>
                            <ul class="list-unstyled footer-links">
                                <li><a href="tel:+902161234567">+90 216 123 45 67</a></li>
                                <li><a href="mailto:info@egitimportali.com">info@egitimportali.com</a></li>
                                <li>İstanbul, Türkiye</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="footer-btm">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-xl-6 col-sm-12 col-lg-6">
                            <p class="mb-0 copyright text-sm-center text-lg-start">© @DateTime.Now.Year Eğitim Portalı. Tüm hakları saklıdır.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer End -->

    <!-- Mevcut Script'ler -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <!-- Edumel Template Script'leri -->
    <script src="~/edumel-assets/vendors/counterup/waypoint.js"></script>
    <script src="~/edumel-assets/vendors/counterup/jquery.counterup.min.js"></script>
    <script src="~/edumel-assets/vendors/owl/owl.carousel.min.js"></script>
    <script src="~/edumel-assets/vendors/animated-headline/animated-headline.js"></script>
    <script src="~/edumel-assets/vendors/magnific-popup/jquery.magnific-popup.min.js"></script>
    <script src="~/edumel-assets/js/script.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 